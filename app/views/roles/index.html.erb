<div class="container well">
  <div class="row">
    <div class="col-md-12">
      <h1>Listado de Roles</h1>

      <div class="table-responsive">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Descripcion</th>
              <th colspan="3">Opciones</th>
            </tr>
          </thead>

          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <td><%= role.nombre %></td>
                <td><%= role.descripcion %></td>
                <td><%= link_to 'Mostrar', role , class: "btn btn-primary"%></td>
                <% if current_user.employee.nil? && current_user.patient.nil? %>
                <td><%= link_to 'Editar', edit_role_path(role) , class: "btn btn-warning"%></td>
                <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-danger" %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= link_to 'Nuevo Rol', new_role_path, class: "btn btn-default" %>
    </div>
  </div>


</div>
