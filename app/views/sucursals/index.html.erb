<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <h1>Sucursales</h1>
      <div class="table-responsive">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Direccion</th>
              <th>Telefono</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @sucursals.each do |sucursal| %>
              <tr>
                <td><%= sucursal.direccion %></td>
                <td><%= sucursal.telefono %></td>
                <td><%= link_to 'Mostrar', sucursal, class: "btn btn-success" %></td>
                <td><%= link_to 'Editar', edit_sucursal_path(sucursal), class: "btn btn-warning" %></td>
                <td><%= link_to 'Eliminar', sucursal, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>


      <%= link_to 'Nueva Sucursal', new_sucursal_path, class: "btn btn-primary" %>

    </div>
  </div>
</div>
