<div class="container">
  <div class="row jumbotron">
    <!--Buscador-->
    <div class="col-md-3 well">
      <%= form_tag diary_path, method: :get, class: "form-horizontal" do%>
        <div class="form-group">
          <div class="col-md-offset-1 col-md-10">
              <%= text_field_tag :fecha, params[:fecha], class: "form-control datepicker", placeholder:"Elija una fecha" %>              
          </div>
        </div>
        <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
      <% end %>
    </div>
    <!--Buscador-->

    <div class="col-md-1">

    </div>
    <div class="col-md-8 well" style="background-color:#c5d8de;">
      <h3>Agenda libre del Doctor</h3>
      <div class="table-responsive">
        <table class="table table-hover" id="transactions">
          <thead>
            <tr>
              <th>Horario:</th>
              <th colspan="3">Opciones:</th>
            </tr>
          </thead>
          <tbody>
            <% @horas.each do |hora| %>
                <td class="concept"><%= hora %></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
