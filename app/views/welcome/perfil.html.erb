<% if user_signed_in? %>
  <% if current_user.employee.nil? && current_user.patient.nil? %>
    <div class="container well">
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <h1>Bienvenido/a <%= current_user.username %></h1>
          <table class="table table-striped table-bordered">
            <thead>
              <tr class="success">
                <th>Rol</th>
              </tr>
            </thead>
            <tbody>
              <tr class="warning">
                <td>Administrador</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <% if current_user.patient.nil? %>
      <h1>Bienvenido/a <%= current_user.username %></h1>
      <div class="container">
        <table class="table table-striped table-bordered">
          <thead>
            <tr class="success">
              <th>Rol</th>
            </tr>
          </thead>
          <tbody>
            <tr class="success">
              <td><%= current_user.employee.role.nombre %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
    <% if current_user.employee.nil? %>
      <h1>Bienvenido/a <%= current_user.username %></h1>
      <div class="container">
        <table class="table table-striped table-bordered">
          <thead>
            <tr class="success">
              <th>Rol</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= current_user.patient.role.nombre %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  <% end %>
<% end %>
