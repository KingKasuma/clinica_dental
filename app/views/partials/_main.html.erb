<div class="container">
  <div class="col-md-offset-3 col-md-6 col-md-offset-3">
      <!--Los flash messages-->
      <% flash.each do |name, msg| %>
        <div class='alert alert-<%= "#{name}" %>'>
          <a href='#' class='close' data-dismiss='alert'>&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        </div>
      <% end %>
  </div>
</div>
    <%= yield %>
